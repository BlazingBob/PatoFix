<div class="d-flex justify-content-center align-items-center">
  <div class="lines"></div>
  <div class="title-wrapper px-4">
    <h1 class="text-dark text-decoration-none">Community</h1>
  </div>
  <div class="lines"></div>
</div>
<div id="background-prompt">
  <% @posts.each do |post| %>
    <div class="window">
      <div class="bar">
        <i></i>
        <div>
          <p><%= @lesson.title %></p>
        </div>
      </div>
      <div class="content">
        <%= link_to lesson_post_path(@lesson, post), class: "text-decoration-none" do %>
          <h6 class="text-dark"><%= post.title %></h6>
          <p class="text-dark"><%= post.content %></p>
          <p><strong>Posted by:</strong> <%= post.user.username %></p>
          <div class="d-flex justify-content-between">
            <p class="text-secondary">
              <% if post.timestamp.to_date == Date.today %>
                <%= "Today, #{post.timestamp.strftime('%H:%M')}" %>
              <% elsif post.timestamp.to_date == Date.yesterday %>
                <%= "Yesterday, #{post.timestamp.strftime('%H:%M')}" %>
              <% else %>
                <%= post.timestamp.strftime('%d-%m-%Y %H:%M') %>
              <% end %>
            </p>
            <button class="btn btn-primary">Give answer</button>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
